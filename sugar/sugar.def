Bootstrap: docker
From: nvidia/cuda:11.8.0-devel-ubuntu22.04

%files
    /tudelft.net/staff-umbrella/Deep3D/mingchiehhu/SuGaR/environment.yml /opt/environment.yml
    /tudelft.net/staff-umbrella/Deep3D/mingchiehhu/SuGaR/gaussian_splatting/submodules/diff-gaussian-rasterization /opt/diff-gaussian-rasterization
    /tudelft.net/staff-umbrella/Deep3D/mingchiehhu/SuGaR/gaussian_splatting/submodules/simple-knn /opt/simple-knn

%post
    # --- 1. System Setup & Miniconda Installation ---
    apt-mark hold openssh-client
    apt-get update
    # git and build-essential are often present in 'devel' images, but installing ensures it
    apt-get install -y --no-install-recommends wget curl git build-essential
    apt-get install -y --no-install-recommends ninja-build libx11-6 libgl1 libgl1-mesa-glx libxext6 libxrender1 libxi6 libgomp1 libglib2.0-0 libsm6
    apt-get install -f -y
    
    # Download and install Miniconda (re-added because the base image changed)
    CONDA_INSTALLER="Miniconda3-latest-Linux-x86_64.sh"
    wget https://repo.anaconda.com/miniconda/${CONDA_INSTALLER}
    bash ${CONDA_INSTALLER} -b -p /opt/conda
    rm ${CONDA_INSTALLER}

    # 2. Initialize Conda and set CUDA environment for build
    export PATH="/opt/conda/bin:$PATH"
    export TORCH_CUDA_ARCH_LIST="7.0;7.5;8.0;8.6;8.9"
    
    # The CUDA_HOME is already set correctly by the base image, but we can ensure it is in the build environment
    # export CUDA_HOME="/usr/local/cuda" 

    # 3. Create Conda environment
    /opt/conda/bin/conda tos accept
    /opt/conda/bin/conda env create -f /opt/environment.yml

    # 4. Set the PATH to the 'sugar' environment for subsequent installations
    SUGAR_ENV_BIN="/opt/conda/envs/sugar/bin"
    export PATH="${SUGAR_ENV_BIN}:$PATH"

    # --- 5. Install Submodules (The pip install will now find CUDA_HOME) ---
    echo "Installing diff-gaussian-rasterization"
    cd /opt/diff-gaussian-rasterization/
    pip install -e .

    echo "Installing simple-knn"
    cd /opt/simple-knn/
    pip install -e .
    
    echo "Installing Nvdiffrast"
    cd /opt/
    git clone https://github.com/NVlabs/nvdiffrast
    cd nvdiffrast
    pip install .

    pip install ninja

    # 6. Final Cleanup
    /opt/conda/bin/conda clean --all -y
    apt-get clean && rm -rf /var/lib/apt/lists/*
    cd /

%environment
    # Set the environment variables for runtime
    export PATH="/opt/conda/envs/sugar/bin:/opt/conda/bin:$PATH"
    export CONDA_DEFAULT_ENV="sugar"
    # Ensure CUDA libraries are visible to PyTorch/CUDA extensions at runtime
    export LD_LIBRARY_PATH="/usr/local/cuda/lib64:$LD_LIBRARY_PATH" 

%runscript
    # Standard runscript
    if [ -z "$@" ]; then
        echo "Starting Bash shell with 'sugar' environment active (CUDA 11.8)."
        exec /bin/bash
    else
        exec "$@"
    fi
    
%labels
    Author "MCHU"
    OS "Ubuntu 22.04"
    CUDA_Version "11.8.0"
    PythonEnvironment "sugar"